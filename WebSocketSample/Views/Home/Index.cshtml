
@{
    ViewData["Title"] = "WebSocket Application";
}
@model ConfigModel

<style>
    body {
        margin: 0px;
        padding: 0px;
        font-family: Segoe, "Segoe UI", Trebuchet MS, Verdana, sans-serif, Arial;
        font-weight: 400;
        font-size: 26px;
        line-height: 1.5emp;
    }

    ul li {
        margin-left: 20px;
    }

    .maincontainer {
        margin: 0px;
        padding: 0px;
    }

    p {
        margin: 0px;
        padding: 10px;
    }

    .header {
        display: flex;
        padding: 5px 10px;
        left: 0;
        z-index: 9;
        transition-property: top,bottom;
        transition-duration: .5s;
        background-image: linear-gradient(rgba(0,0,0,.8),rgba(0,0,0,.8));
    }

 .form-container {
        padding: 20px;
    }

    .form-input {
        width: 100%; /* Make it responsive */
        padding: 8px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

        .form-input:focus {
            border-color: #66afe9; /* Border color on focus */
            outline: 0; /* Remove outline */
            box-shadow: 0 0 5px rgba(102, 175, 233, .6); /* Shadow effect */
        }

    .form-button {
        font-size: 22px;
        padding: 8px 16px;
        cursor: pointer;
        background-color: #4CAF50;
        color: white;
        border: none;
    }
</style>
<head>
    <meta charset="UTF-8">
    <title>WebSocket Application</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>

<body>
    <div class="maincontainer">
        <table width="100%" border="0">
            <tbody>
                <tr>
                    <td><div class="header"><img src="~/Image/logo.webp" alt="" /></div></td>
                </tr>                
                <tr>
                    <td>
                        <div class="form-container">                            
                            <form id="myForm" method="post">
                                <label for="textCommand">Command:</label>
                                <textarea id="textCommand" name="textCommand" class="form-input"></textarea>
                                <br />

                                <button type="submit" class="form-button">Submit</button>
                                <br />

                                <br />
                                <label for="textAcknowledge">Acknowledgement:</label>
                                <textarea id="textAcknowledge" name="textAcknowledge" class="form-input"></textarea>

                               
                            </form>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <script src="~/js/robust-websocket.js"></script>
    <script>var communicationInfo = '@Html.Raw(Json.Serialize(Model))'</script>
    <script src="~/js/jquery-1.11.0.min.js"></script>
    <script src="~/js/main.js"></script>
</body>


